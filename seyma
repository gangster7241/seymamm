  <script>
    window.addEventListener('load', () => {
      const bgMusic = document.getElementById('bgMusic');
      bgMusic.volume = 0.5;
      bgMusic.play().catch(() => {
        bgMusic.muted = true;
        bgMusic.play();
      });
    });

    function checkLogin() {
      const username = document.getElementById('username').value.toLowerCase();
      const password = document.getElementById('password').value;

      if (username === "yunus oslu" && password === "20.10.2024") {
        document.getElementById('login').style.display = "none";
        const birthday = document.getElementById('birthday');
        birthday.style.display = "flex";

 
        for (let i = 0; i < 50; i++) {
          const balloon = document.createElement("div");
          balloon.classList.add("balloon");
          const size = 20 + Math.random() * 50;
          balloon.style.width = balloon.style.height = size + "px";
          balloon.style.left = Math.random() * window.innerWidth + "px";
          balloon.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
          balloon.style.animationDuration = 5 + Math.random() * 5 + "s";
          birthday.appendChild(balloon);
        }

        for (let i = 0; i < 100; i++) {
          const confetti = document.createElement("div");
          confetti.classList.add("confetti");
          confetti.style.left = Math.random() * window.innerWidth + "px";
          confetti.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
          confetti.style.animationDuration = 2 + Math.random() * 3 + "s";
          const size = 5 + Math.random() * 10;
          confetti.style.width = confetti.style.height = size + "px";
          birthday.appendChild(confetti);
        }
      } else {
        document.getElementById("error").style.display = "block";
      }
    }
  </script>
